{
  "name": "lemanipet",
  "version": "1.0.1",
  "description": "Aplicativo para gerenciamento de requisições",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": "https://github.com/Pcman308/lemani",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.lemanipet",
    "productName": "Lemani Pet",
    "files": [
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Pcman308",
        "repo": "lemani"
      }
    ],
    "win": {
      "icon": "src/screens/main/assets/icone.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "src/screens/main/assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  }
}
